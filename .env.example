# Configurazione Server MCP Inventario
# Copia questo file in .env e configura i valori

# Database PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/inventario_db

# API Key per autenticazione (genera una chiave sicura)
API_KEY=your-secure-api-key-here-min-32-chars

# Porta server (8000 locale, 10000 per Render)
PORT=8000

# Environment
DEBUG=false
NODE_ENV=production

# Opzionali per monitoring
LOG_LEVEL=info
ENABLE_METRICS=false

# Test Database (solo per sviluppo)
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/test_inventario_db
